<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <Style x:Key="setting" TargetType="MenuItem">
        <Setter Property="Header" Value="确定" />
        <Setter Property="FontFamily" Value="Meiryo UI" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    <Style x:Key="language" TargetType="MenuItem">
        <Setter Property="Header" Value="语言" />
        <Setter Property="FontFamily" Value="Meiryo UI" />
        <Setter Property="FontSize" Value="12" />
    </Style>
    <Style x:Key="hello" TargetType="Label">
        <Setter Property="Content" Value="你好！" />
        <Setter Property="FontFamily" Value="Meiryo UI" />
        <Setter Property="FontSize" Value="48" />
    </Style>
</ResourceDictionary>
    